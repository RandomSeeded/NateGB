{
  "rules": {
    "arrow-return-shorthand": [true],
    // clean up code and then enable this rule
    "await-promise": false,
    "class-name": true,
    "curly": false,
    "eofline": true,
    "forin": true,
    "indent": [true, 4],
    "label-position": true,
    "max-line-length": [true, 140],
    "no-arg": true,
    "no-bitwise": true,
    "no-consecutive-blank-lines": true,
    "no-console": false,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    // clean up code and then enable this rule
    "no-floating-promises": false,
    "no-string-literal": false,
    "no-trailing-whitespace": true,
    "no-use-before-declare": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "one-line": [true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "prefer-const": true,
    "promise-function-async": true,
    "quotemark": [true, "single"],
    "radix": true,
    "semicolon": true,
    "trailing-comma": false,
    "triple-equals": [true, "allow-null-check"],
    "variable-name": false,
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-preblock",
      "check-separator",
      "check-type"
    ]
  }
}


